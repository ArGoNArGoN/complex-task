<Window x:Class="ClientManager.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientManager.MVVM.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary Source="Style/MainWindowSheme.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource BorderMenuStyle}">
            <StackPanel Style="{StaticResource Container}">
                <Border Style="{StaticResource ContainerItem}"></Border>

                <RadioButton Style="{StaticResource MenuItem}" Content="Заказы"></RadioButton>
                <RadioButton Style="{StaticResource MenuItem}" Content="Сотрудники"></RadioButton>
                <RadioButton Style="{StaticResource MenuItem}" Content="Клиенты"></RadioButton>
            </StackPanel>
        </Border>

        <Border Grid.Column="1">
            <ContentPresenter></ContentPresenter>
        </Border>
    </Grid>
</Window>
